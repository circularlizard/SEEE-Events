# OSM API Configuration
OSM_API_URL=https://www.onlinescoutmanager.co.uk
OSM_API_TOKEN=your_api_token_here
OSM_OAUTH_URL=https://www.onlinescoutmanager.co.uk/oauth

# OSM OAuth Configuration (for NextAuth.js)
OSM_CLIENT_ID=your_oauth_client_id_here
OSM_CLIENT_SECRET=your_oauth_client_secret_here

# NextAuth Configuration
NEXTAUTH_URL=https://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# HTTPS dev server port override (server.js)
PORT=3000

# Mock Authentication (for offline development and CI testing)
# Set to 'true' to enable mock authentication without OSM credentials
# When enabled, use username 'admin', 'standard', 'readonly', or 'multiSection'
MOCK_AUTH_ENABLED=false
# Mirror of MOCK_AUTH_ENABLED for client-side checks (login page, etc.)
NEXT_PUBLIC_MOCK_AUTH_ENABLED=false

# Mock Service Worker (MSW) - Controls whether to use mock API data
# Set to 'true' to intercept API calls and return mock data from src/mocks/data/
NEXT_PUBLIC_USE_MSW=false
# MSW data mode (comma-separated): admin (full data), standard (event-only), platform (adds telemetry/cache)
MSW_MODE=admin

# Login application visibility (comma-separated AppKeys: expedition, planning, data-quality, platform-admin, multi)
NEXT_PUBLIC_VISIBLE_APPS=expedition,planning

# Redis Configuration (for local development, use docker-compose.yml)
REDIS_URL=redis://localhost:6379

# For Vercel KV in production, use these instead:
# KV_URL=
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# KV_REST_API_READ_ONLY_TOKEN=

# Next.js Configuration
NODE_ENV=development
LOG_LEVEL=debug

# API Debug Logging
# Set to 'true' to log all API requests/responses to logs/api-debug.log
# WARNING: Log files may contain PII - do not commit or share
DEBUG_API_LOGGING=false

# Session handling
# When true (or when NODE_ENV=production) the server bumps session version at boot to force re-auth
INVALIDATE_SESSIONS_ON_START=false

# Client inactivity + telemetry timers (milliseconds)
NEXT_PUBLIC_INACTIVITY_TIMEOUT_MS=900000
NEXT_PUBLIC_RATE_LIMIT_TELEMETRY_POLL_MS=15000
NEXT_PUBLIC_PLATFORM_CACHE_POLL_MS=60000

# CI / instrumentation toggles
CI=false
INSTRUMENT_CODE=false
