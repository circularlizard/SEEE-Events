{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "command",
  "concurrency": 6,
  "timeoutMS": 20000,
  "timeoutFactor": 3,
  "reporters": ["html", "clear-text", "progress"],
  "coverageAnalysis": "off",
  "mutate": [
    "src/lib/**/*.ts",
    "src/store/**/*.ts",
    "!src/lib/schemas.ts",
    "!src/lib/logger.ts",
    "!src/lib/redis.ts"
  ],
  "ignorePatterns": [
    "tests/e2e/**",
    "playwright-report/**",
    "test-results/**",
    ".next/**",
    "coverage/**"
  ],
  "commandRunner": {
    "command": "npx jest --config jest.config.ts --maxWorkers=2 src/lib src/store"
  },
  "tempDirName": ".stryker-tmp",
  "htmlReporter": {
    "fileName": "reports/mutation/index.html"
  }
}
